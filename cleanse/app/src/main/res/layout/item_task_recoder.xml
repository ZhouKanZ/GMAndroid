<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:paddingTop="6dp"
    android:paddingRight="50dp"
    android:id="@+id/item_task_recorder"
    >

    <!-- 缩略图 -->
    <ImageView
        android:id="@+id/iv_map"
        android:layout_width="51dp"
        android:layout_height="51dp"
        android:layout_marginLeft="40dp"
        android:src="@drawable/add" />

    <!-- 任务名称 -->
    <TextView
        android:id="@+id/tv_task_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/iv_map"
        android:text="一楼客厅"
        android:textColor="@color/colorIndicator"
        android:textSize="@dimen/text_size_15sp" />

    <!--  任务执行时间  -->
    <TextView
        android:id="@+id/tv_exe_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="2018年5月20号
        17时42分"
        android:textColor="@color/colorIndicator"
        android:textSize="@dimen/text_size_15sp"
        />

    <!-- 任务持续时间 -->
    <TextView
        android:id="@+id/tv_keep_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2018234654651"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="50dp"
        android:layout_marginEnd="50dp"
        android:layout_alignParentEnd="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorDiviLine"
        android:layout_below="@+id/iv_map"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="6dp"
        />


</RelativeLayout>