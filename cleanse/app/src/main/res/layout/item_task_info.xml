<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp"
    android:background="@android:color/white"
    android:paddingBottom="6dp"
    android:paddingLeft="10dp"
    android:paddingTop="6dp">

    <!--android:background="@color/task_item_background_color_selector"-->

    <TextView
        android:id="@+id/tv_task_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="7dp"
        android:text="任务一"
        android:textColor="@color/colorTextTitle"
        android:textSize="@dimen/text_size_12sp"
        android:drawableStart="@drawable/task_title_left_indicator"
        android:drawableLeft="@drawable/task_title_left_indicator" />

    <!-- 任务是否在执行 -->
    <TextView
        android:id="@+id/tv_task_is_executing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="2dp"
        android:text="正在执行"
        android:textColor="@color/colorTextSelected"
        android:textSize="@dimen/text_size_9sp" />

    <View
        android:id="@+id/first_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/tv_task_name"
        android:layout_marginTop="6dp"
        android:background="@color/colorDiviLine" />

    <TextView
        android:id="@+id/tv_task_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/first_line"
        android:layout_marginTop="6dp"
        android:drawableLeft="@drawable/task_location"
        android:drawablePadding="6dp"
        android:text="医院二楼大厅"
        android:textColor="@color/colorTextContentMain"
        android:textSize="@dimen/text_size_8sp" />

    <View
        android:id="@+id/second_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/tv_task_location"
        android:layout_marginTop="6dp"
        android:background="@color/colorDiviLine" />

    <TextView
        android:id="@+id/tv_create_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/second_line"
        android:layout_marginTop="6dp"
        android:drawableLeft="@drawable/task_createdate"
        android:drawablePadding="3dp"
        android:text="2018-2-28 (周五) 14：00"
        android:textColor="@color/colorTextContentMain"
        android:textSize="@dimen/text_size_8sp" />


</RelativeLayout>